<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/large_margin"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/xxdark_gray_opacity"
    tools:context="com.moonshile.lib.ui.LockerActivity" >
    
    
    <LinearLayout android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="@dimen/activity_vertical_margin"
     android:paddingBottom="@dimen/activity_vertical_margin"
     android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:orientation="vertical"
     android:gravity="top"
     android:background="@drawable/moonshile_dialog_shape" >
        
		<EditText android:id="@+id/moonshile_lock_key"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/small_margin"
	        android:inputType="textPassword" 
	        android:hint="@string/moonshile_lock_key" />
	    
		<Button android:id="@+id/moonshile_unlock_ok"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/small_margin"
	        android:paddingTop="@dimen/view_horizontal_margin"
	        android:paddingBottom="@dimen/view_horizontal_margin"
	        android:background="@drawable/moonshile_button_shape"
	        android:text="@string/moonshile_unlock_ok"
	        android:textColor="@color/dark_gray"
	        android:onClick="onOK" />
    
		<Button android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/small_margin"
	        android:layout_marginBottom="@dimen/small_margin"
	        android:paddingTop="@dimen/view_horizontal_margin"
	        android:paddingBottom="@dimen/view_horizontal_margin"
	        android:background="@drawable/moonshile_button_shape_cancel"
	        android:text="@string/moonshile_unlock_cancel"
	        android:textColor="@color/dark_gray"
	        android:onClick="onCancel" />
    
    
    </LinearLayout>

</LinearLayout>
